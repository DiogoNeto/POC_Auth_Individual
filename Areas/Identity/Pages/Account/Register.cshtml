@page
@model RegisterModel
@{
    ViewData["Title"] = "Registo";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Criar uma nova conta</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3 col-md-12">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="nome@examplo.com" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-md-12">
                @* <input asp-for="Input.Role" class="dropdown" autocomplete="perfil" aria-required="true" placeholder="perfil" /> *@
                @* <label asp-for="Input.Role"></label> *@
                <select id="role" class="form-select col-md-12">
                    <option value="1">Administrador</option>
                    <option value="2">Colaborador Técnico</option>
                    <option value="3">Colaborador Profissional de Saúde</option>
                    <option value="4">Colaborador Cuidador</option>
                    <option value="5">Família</option>
                    <option value="6">Servíços Externos</option>
                </select>
                <label for="floatingSelect">Perfil</label>
                <span asp-validation-for="Input.Role" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-md-12">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-md-12">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirmar Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registar</button>
        </form>
    </div>
